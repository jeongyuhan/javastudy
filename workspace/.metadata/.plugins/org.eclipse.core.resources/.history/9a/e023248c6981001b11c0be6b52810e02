package ex02_String;

public class Quiz03 {

	public static void main(String[] args) {
		
		// 파일명과 확장자명 분리하기
		
		String fullname = "2021-03-10.jpg";
		String filename = fullname.substring(0, fullname.indexOf("."));; // 2021-03-10
		String extname = fullname.substring(fullname.indexOf(".")+1);; // jpg
		
		//filename = fullname.substring(0, fullname.indexOf("."));
		//extname = fullname.substring(fullname.indexOf(".")+1);
		
		
		
		
		
		System.out.println("파일명: " + filename);
		System.out.println("확장자명: " + extname);
	}

}
